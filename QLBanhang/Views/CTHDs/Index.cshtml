@model IEnumerable<QLBanhang.Models.CTHDViewModel>

@{
    ViewBag.Title = "Chi tiết hóa đơn";
}

<h2>Chi tiết hóa đơn - @ViewBag.MaHD</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Số TT</th>
            <th>Tên SP</th>
            <th>Đơn vị tính</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            float tongtien = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            tongtien += item.Thanhtien;
            <tr>
                <td>@i</td>
                <td>@item.TenSP</td>
                <td>@item.Donvitinh</td>
                <td>@item.Soluong</td>
                <td>@String.Format("{0:0,##0}", item.DongiaBan)</td>
                <td>@String.Format("{0:0,##0}", item.Thanhtien)</td>
            </tr>
        }
        <tr>
            <td colspan="5"><strong>Tổng cộng:</strong></td>
            <td><strong>@String.Format("{0:0,##0}", tongtien)</strong></td>
        </tr>
    </tbody>
</table>


